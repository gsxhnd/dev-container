name: BuildDevImage

on:
  push:
    paths:
      - 'container/dev.base.dockerfile'
      - 'container/dev.full.dockerfile'

jobs:
  Build:
    name: BuildDevImage
    runs-on: ubuntu-latest

    steps:
      - name: Check out code
        uses: actions/checkout@v3

      - name: Login to Docker Hub
        uses: docker/login-action@v2
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}

      - name: Build Base Dev Image
        run: |
          docker build -f container/dev.base.dockerfile -t gsxhnd/dev-container:base .
          echo "gsxhnd/dev-container:base" >> images.txt
          
      - name: Build Full Dev Image
        run: |
          docker build -f container/dev.full.dockerfile -t gsxhnd/dev-container:full .
          echo "gsxhnd/dev-container:full" >> images.txt
      - name: Push Image
        run: |
          chmod +x push_images.sh
          ./push_images.sh
